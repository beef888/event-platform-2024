# Database
DATABASE_URL="postgresql://username:password@localhost:5432/instamedia?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
APPLE_CLIENT_ID=""
APPLE_CLIENT_SECRET=""

# Email
EMAIL_SERVER="smtp://username:password@smtp.provider.com:587"
EMAIL_FROM="noreply@instamedia.com"

# Storage
STORAGE_BUCKET=""
STORAGE_ACCESS_KEY=""
STORAGE_SECRET_KEY=""

# WebSocket
WS_PORT=3001

# Security
CSRF_SECRET="your-csrf-secret-here"
ENCRYPTION_KEY="your-encryption-key-here"

# Features
ENABLE_NFC=true
ENABLE_OFFLINE_MODE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_LEADERBOARD=30
CACHE_TTL_USER_STATS=300
CACHE_TTL_CONTENT=3600